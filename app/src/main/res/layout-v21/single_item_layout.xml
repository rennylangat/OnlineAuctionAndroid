<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="10dp"
    android:layout_height="wrap_content">
    
    <androidx.cardview.widget.CardView
        android:id="@+id/cardViewItem"
        android:layout_width="match_parent"
        android:padding="10dp"
        app:cardCornerRadius="5dp"
        android:elevation="10dp"
        android:layout_height="wrap_content">
        
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="160dp">
            <ImageView
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:id="@+id/imgItem"
                android:src="@drawable/ic_launcher_background"/>
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:padding="10dp"
                android:layout_toRightOf="@+id/imgItem">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Nike Shoes"
                    android:textStyle="bold"
                    android:textSize="16sp"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:id="@+id/txtItemTitle"/>
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/txtItemTitle"
                    android:text="Description of the Item Lorem Posem among ther stories"
                    android:id="@+id/txtItemDesc"
                    android:textSize="14sp"
                    android:textColor="@color/black"/>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="#E6DBF4"
                    android:layout_below="@+id/txtItemDesc">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Highest Bid"
                        android:id="@+id/fixedBidTxtView"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/fixedBidTxtView"
                        android:text="Your Bid"
                        android:layout_marginLeft="70dp"
                        android:textStyle="bold"
                        android:textSize="16sp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/fixedBidTxtView"
                        android:text="Ksh 1200.00"
                        android:layout_alignParentBottom="true"
                        android:layout_marginTop="20dp"
                        android:id="@+id/fixedBidItem"/>
                    <View
                        android:layout_width="1dp"
                        android:layout_height="match_parent"
                        android:layout_toRightOf="@+id/fixedBidTxtView"
                        android:background="@color/black"
                        android:id="@+id/divider"
                        android:layout_marginLeft="30dp"/>
                    <com.google.android.material.textfield.TextInputLayout
                        android:id="@+id/txtInputLay"
                        android:layout_toRightOf="@+id/divider"
                        android:layout_below="@+id/fixedBidTxtView"
                        android:layout_width="match_parent"
                        style="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox"
                        android:layout_marginLeft="10dp"
                        android:layout_marginRight="10dp"
                        android:layout_marginTop="5dp"
                        android:layout_alignParentBottom="true"
                        android:layout_height="40dp">
                        <com.google.android.material.textfield.TextInputEditText
                            android:layout_width="match_parent"
                            android:layout_height="30dp"
                            android:id="@+id/txtItemBid"
                            android:hint="Your Bid"/>
                    </com.google.android.material.textfield.TextInputLayout>
                </RelativeLayout>
            </RelativeLayout>
            
        </RelativeLayout>
        
    </androidx.cardview.widget.CardView>

</LinearLayout>