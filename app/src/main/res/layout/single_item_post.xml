<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/view"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginLeft="8dp"
    android:layout_marginTop="4dp"
    android:layout_marginEnd="4dp"
    android:layout_marginRight="8dp"
    android:background="@drawable/recycler_bg2">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/image_view"
            android:layout_width="86dp"
            android:layout_height="95dp"
            android:src="@drawable/popular1" />

        <TextView
            android:id="@+id/item_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/image_view"
            android:text="@string/item_name"
            android:textSize="18sp"
            android:textStyle="bold" />

        <RelativeLayout
            android:id="@+id/typeLocLay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/item_name"
            android:layout_marginTop="10dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/image_view">

            <TextView
                android:id="@+id/all_itemType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/ic_cat_main_bg"
                android:gravity="center"
                android:textSize="12sp"
                android:text="Cars" />

            <TextView
                android:id="@+id/item_Location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@+id/all_itemType"
                android:background="@drawable/ic_cat_main_bg"
                android:gravity="center"
                android:layout_marginLeft="10dp"
                android:textSize="12sp"
                android:text="Location"
                android:layout_toEndOf="@+id/all_itemType" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_below="@+id/typeLocLay"
            android:layout_marginTop="15dp"
            android:layout_marginStart="16dp"
            android:layout_marginLeft="16dp"
            android:layout_toRightOf="@+id/image_view">

            <ImageView
                android:id="@+id/imgClock"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_end_time" />

            <TextView
                android:id="@+id/endTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="7dp"
                android:gravity="center_vertical"
                android:fontFamily="@font/rubik_bold"
                android:layout_toRightOf="@+id/imgClock"
                android:text="12:00"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/deliveryTime"
                android:layout_width="40dp"
                android:layout_height="15dp"
                android:background="@drawable/time_bg"
                android:textColor="@color/white"
                android:textAlignment="center"
                android:gravity="center"
                android:layout_marginTop="4dp"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/endTime"
                android:text="45 Mins"
                android:textSize="8sp" />

            <TextView
                android:id="@+id/deliveryType"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/deliveryTime"
                android:text="Free Delivery"
                android:layout_marginLeft="10dp"
                android:gravity="center_vertical"
                android:textSize="15sp" />
        </RelativeLayout>

        <TextView
            android:id="@+id/base_bid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/typeLocLay"
            android:layout_centerVertical="true"
            android:gravity="center_vertical"
            android:text="Ksh 1600"
            android:fontFamily="@font/rubik"
            android:layout_marginLeft="60dp"
            android:layout_marginRight="7dp"
            android:textColor="@color/white"
            android:textSize="13sp" />

    </RelativeLayout>
</androidx.coordinatorlayout.widget.CoordinatorLayout>