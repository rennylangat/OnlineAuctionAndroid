<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/view1"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/Theme.AppCompat.Light.NoActionBar"
    android:background="@color/design_default_color_primary">

    <ImageView
        android:id="@+id/bckBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/ic_back"
        android:layout_marginLeft="24dp"
        tools:ignore="VectorDrawableCompat" />

    <ImageView
        android:id="@+id/moreBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="24dp"
        android:layout_alignParentRight="true"
        app:srcCompat="@drawable/ic_more"
        android:layout_marginRight="24dp"
        tools:ignore="VectorDrawableCompat" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="450dp"
        android:background="@drawable/detail_page_bg"
        android:layout_below="@+id/imgItem"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/txtCat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="24dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_cat_bg"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center"
            android:text="Cosmetics"
            android:textSize="15sp"
            android:textColor="@drawable/screen_background_dark"
            android:layout_marginLeft="24dp" />

        <TextView
            android:id="@+id/txtLocation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="20dp"
            android:background="@drawable/ic_cat_bg"
            android:fontFamily="@font/rubik_medium"
            android:gravity="center"
            android:text="Location"
            android:layout_toRightOf="@+id/txtCat"
            android:textColor="@drawable/screen_background_dark" />

        <TextView
            android:id="@+id/txtItemTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginRight="32dp"
            android:layout_marginLeft="10dp"
            android:fontFamily="@font/rubik_bold"
            android:text="Japanese Cherry Blossom"
            android:layout_below="@+id/txtCat"
            android:textColor="@android:color/background_dark"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/txtPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="24dp"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:textColor="#42995C"
            android:textSize="18sp"
            android:gravity="center_vertical"
            android:text="$15.00"
            android:layout_below="@+id/txtItemTitle"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/rubik_bold" />


        <TextView
            android:id="@+id/txtItemDesc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="90dp"
            android:fontFamily="@font/rubik"
            android:lineSpacingExtra="2dp"
            android:layout_below="@+id/txtPrice"
            android:text="A moisturizing body with a sweet and refreshing aroma of Japanese cherry blossom, peony, musk, and strawberry. Will make the skin feel moist and smooth. The combination also makes long-lasting fragrance."
            android:textColor="@android:color/background_dark" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_below="@+id/txtItemDesc">
        <ImageView
            android:id="@+id/minusBtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_minus"
            app:tint="@color/black"
            tools:ignore="VectorDrawableCompat" />

            <TextView
                android:layout_width="35dp"
                android:layout_height="53dp"
                android:text="Ksh"
                android:gravity="center"
                android:textSize="20sp"
                android:textColor="@color/black"
                android:layout_marginLeft="7dp"
                android:layout_toRightOf="@+id/minusBtn"
                android:id="@+id/currPlaceHolder"/>

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/txtBid"
            android:layout_width="80dp"
            android:layout_height="53dp"
            android:gravity="center"
            android:inputType="number"
            android:text="0.00"
            android:layout_toRightOf="@+id/currPlaceHolder"
            android:textColor="@drawable/screen_background_dark"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/btnAdd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            app:srcCompat="@drawable/ic_plus"
            android:layout_toRightOf="@+id/txtBid"
            tools:ignore="VectorDrawableCompat" />

        <Button
            android:id="@+id/btnBid"
            android:layout_width="wrap_content"
            android:layout_height="50dp"
            android:background="@drawable/detail_pg_cart_btn_bg"
            android:text="ADD TO CART"
            android:textColor="@color/white"
            android:layout_alignParentRight="true"
            android:fontFamily="@font/rubik_medium"
            android:layout_alignParentEnd="true" />
        </RelativeLayout>
        </RelativeLayout>

    <ImageView
        android:id="@+id/imgItem"
        android:layout_width="290dp"
        android:layout_height="350dp"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="10dp"
        android:layout_centerHorizontal="true"
        android:scaleType="fitCenter"
        android:transitionName="image"
        android:src="@drawable/prod"/>

</RelativeLayout>